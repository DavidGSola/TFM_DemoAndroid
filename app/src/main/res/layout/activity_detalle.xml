<?xml version="1.0" encoding="utf-8"?>
<com.nirhart.parallaxscroll.views.ParallaxScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:parallax_factor="8"
    android:id="@+id/scrollView"
    android:background="@android:color/white">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/white">

        <TextView
            android:id="@+id/detalle_titulo_progress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Enviando datos al servidor"
            android:layout_marginTop="16dp"
            android:textSize="20sp"
            android:layout_gravity="center_horizontal"/>

        <ProgressBar
            android:id="@+id/detalle_progress"
            style="?android:attr/progressBarStyleLarge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"/>

        <ImageView
            android:id="@+id/detalle_imagen"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:scaleType="centerCrop"
            android:src="@drawable/portada_citara"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:orientation="horizontal"
            android:layout_marginTop="16dp">

            <ImageView
                android:id="@+id/detalle_titulo_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_titulo"
                android:tint="@color/INDIGO_100"/>

            <TextView
                android:id="@+id/detalle_titulo"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical" />

        </LinearLayout>
        <View
            android:id="@+id/detalle_separator_1"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="72dp"
            android:background="@color/GREY_100"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="56dp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detalle_lugar_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_lugar"
                android:tint="@color/INDIGO_100"/>

            <TextView
                android:id="@+id/detalle_lugar"
                android:layout_width="fill_parent"
                android:layout_height="match_parent"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical" />

        </LinearLayout>
        <View
            android:id="@+id/detalle_separator_2"
            android:layout_width="fill_parent"
            android:layout_height="1dp"
            android:layout_marginLeft="72dp"
            android:background="@color/GREY_100"/>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/detalle_descripcion_ic"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="8dp"
                android:src="@drawable/ic_descripcion"
                android:tint="@color/INDIGO_100"/>

            <TextView
                android:id="@+id/detalle_descripcion"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="8dp"
                android:gravity="center_vertical"
                android:paddingTop="16dp"/>

        </LinearLayout>

        <Button
            android:id="@+id/detalle_boton"
            android:layout_width="match_parent"
            android:layout_height="72dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:backgroundTint="@color/INDIGO_100"
            android:text="Comenzar"/>

    </LinearLayout>

</com.nirhart.parallaxscroll.views.ParallaxScrollView>